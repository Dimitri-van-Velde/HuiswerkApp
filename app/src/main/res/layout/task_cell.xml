<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cellTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="@color/darkGray"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/cellEstimatedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(h)"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:maxLines="1"
            android:textColor="@color/darkGray"
            android:textSize="13sp"
            android:layout_gravity="center"/>

    </LinearLayout>


    <TextView
        android:id="@+id/cellDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:textColor="@color/darkGray"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/cellSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:textColor="@color/darkGray"
        android:textSize="16sp"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/cellOwnDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="own deadline"
            android:maxLines="1"
            android:textColor="@color/darkGray"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:textColor="@color/darkGray"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/cellDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="actual deadline"
            android:maxLines="1"
            android:textColor="@color/darkGray"
            android:textSize="13sp"/>

    </LinearLayout>


</LinearLayout>